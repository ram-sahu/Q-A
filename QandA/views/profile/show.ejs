<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <% if(currentUser.profilePhoto==="anonymous"){ %>
                <img class="img-circle" src="data:image/jpeg;base64,">
            <% }else{ %>
                <img class="img-circle" src="/questions/profile/<%= currentUser.profilePhoto %>" alt="">
            <% } %>
            <form class="tar" action="questions/<%= currentUser._id %>/profile" method="POST" enctype="multipart/form-data">
                <div class="custom-file mb-3">
                    <label class="oo">Add a photo
                    <input type="file" name="file" id="file">
                    </label>
                </div>
            </form>
            </div>
        <div class="col-md-6">
            <p><strong><%= currentUser.username %>'s Feed</strong></p>
            <hr>
            <% questions.forEach(function(q){ %>
                <%q.answers.forEach(function(i){ %>
                    <% if(currentUser && i.author.id.equals(currentUser._id)){ %>
                        <p><strong><%= q.question %></strong></p>
                        <p><%- i.answer %></p>
                        <hr>
                    <% }%>
                <% }) %>
            <% }) %>
        </div>
    </div>
</div>

<% include ../partials/footer %>