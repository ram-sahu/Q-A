<% include ../partials/header %>

<div class="container">
    <h1>Edit your answer</h1>
    <form action="/questions/<%= question_id %>/answers/<%= answer._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <textarea name="text"><%= answer.answer %></textarea>
            <script>
                CKEDITOR.replace( 'text' );
            </script>
        </div>
        <div class="form-group">
            <button class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>

